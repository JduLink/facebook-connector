		key-type="java.lang.String" value-type="java.lang.Object" scope="prototype">
		<entry key="imageUri" value="${facebook.imageUri}" />
	</util:map>	
	
<!-- get-album-photos -->
	<util:map id="getAlbumPhotosTestData" map-class="java.util.HashMap"
		key-type="java.lang.String" value-type="java.lang.Object" scope="prototype">
