	</util:map>	
	
<!-- 	get-album-comments -->
	<util:map id="getAlbumCommentsTestData" map-class="java.util.HashMap"
		key-type="java.lang.String" value-type="java.lang.Object" scope="prototype">
		<entry key="msg" value="Album Msg" />
